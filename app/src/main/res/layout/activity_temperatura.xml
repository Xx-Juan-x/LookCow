<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controladora.TemperaturaActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo_vacas_temperatura">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="#2B3E3B3B">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Temperaturas"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView_temperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id Temperatura"
            android:textAlignment="center"
            android:textColor="#FDF0DE"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="Id Temperatura"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textStyle="bold|italic"
                android:textSize="16sp"
                android:backgroundTint="#A1FFFFFF"
                android:background="@drawable/border"
                android:padding="11dp"
                android:layout_marginTop="3dp" />

            <Button
                android:id="@+id/btnbus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Buscar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="20dp"
                android:backgroundTint="#E169431F"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_temperatura_actual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperatura Actual"
            android:textAlignment="center"
            android:textColor="#FDF0DE"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtTempActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="Temp Actual"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textStyle="bold|italic"
                android:textSize="16sp"
                android:backgroundTint="#A1FFFFFF"
                android:background="@drawable/border"
                android:padding="11dp"
                android:layout_marginTop="3dp" />

            <Button
                android:id="@+id/btnBusActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Buscar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="20dp"
                android:backgroundTint="#E169431F"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_temperatura_maxima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperatura Máxima"
            android:textAlignment="center"
            android:textColor="#FDF0DE"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/txtTempMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Temp Maxima"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textStyle="bold|italic"
            android:textSize="16sp"
            android:backgroundTint="#A1FFFFFF"
            android:background="@drawable/border"
            android:padding="11dp"
            android:layout_marginTop="3dp" />

        <TextView
            android:id="@+id/textView_temperatura_minima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperatura Mínima"
            android:textAlignment="center"
            android:textColor="#FDF0DE"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"/>

        <EditText
            android:id="@+id/txtTempMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Temp Minima"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            tools:ignore="TouchTargetSizeCheck"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textStyle="bold|italic"
            android:textSize="16sp"
            android:backgroundTint="#A1FFFFFF"
            android:background="@drawable/border"
            android:padding="11dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/textView_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado del Animal"
            android:textAlignment="center"
            android:textColor="#FDF0DE"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"/>

        <EditText
            android:id="@+id/txtestado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estado del animal"
            android:inputType="text"
            android:textAlignment="center"
            tools:ignore="TouchTargetSizeCheck"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textStyle="bold|italic"
            android:textSize="16sp"
            android:backgroundTint="#A1FFFFFF"
            android:background="@drawable/border"
            android:padding="11dp"
            android:layout_marginTop="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btnmod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modificar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="#E169431F"
                android:padding="20dp"/>

            <Button
                android:id="@+id/btnreg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Registrar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="#E169431F"
                android:padding="20dp"/>

            <Button
                android:id="@+id/btneli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eliminar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="#E169431F"
                android:padding="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Listado de Vientres"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#C069431F"
            android:text="  IdSensor      Temperatura Actual          Estado    "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lvDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@android:color/white"
                android:dividerHeight="1dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_margin="8dp"
                android:scrollbars="vertical"
                android:background="#653E3B3B"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>