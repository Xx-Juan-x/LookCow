<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_permisos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controladora.PermisoActivity"
    android:background="@drawable/permisovaca">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView_permiso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Permisos"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/textView_id_accion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Id Accion"
                android:textAlignment="center"
                android:textColor="#FDF0DE"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout_id_accion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/gray"
                    android:hint="Id Accion"
                    android:textColorHint="@color/gray"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:textSize="16sp"
                    android:backgroundTint="#A1FFFFFF"
                    android:background="@drawable/border"
                    android:padding="11dp" />

                <Button
                    android:id="@+id/btnbus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#E169431F"
                    android:text="Buscar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView_accion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accion"
                android:textAlignment="center"
                android:textColor="#FDF0DE"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout_accion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/txtAccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/gray"
                    android:hint="Accion"
                    android:textColorHint="@color/gray"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:textSize="16sp"
                    android:backgroundTint="#A1FFFFFF"
                    android:background="@drawable/border"
                    android:padding="11dp" />

                <Button
                    android:id="@+id/btnbusAccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#E169431F"
                    android:text="Buscar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout_id_accion"
                android:text="Descripción"
                android:textAlignment="center"
                android:textColor="#FDF0DE"
                android:textSize="20dp"
                android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descripción"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:textSize="16sp"
                    android:backgroundTint="#A1FFFFFF"
                    android:background="@drawable/border"
                    android:padding="11dp"
                    android:layout_marginTop="3dp"/>

            <LinearLayout
                android:id="@+id/linear_Layout_botones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/btnmod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Modificar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#E169431F"
                    android:padding="20dp"/>

                <Button
                    android:id="@+id/btnreg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="Registrar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#E169431F"
                    android:padding="20dp"/>

                <Button
                    android:id="@+id/btneli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Eliminar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#E169431F"
                    android:padding="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_titulo_tabla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_Layout_botones">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Tipos de Permisos"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>

                <!--<TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#C069431F"
                    android:textAlignment="center"
                    android:text="Accion"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ListView
                            android:id="@+id/lvDatos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@android:color/white"
                            android:dividerHeight="1dp"
                            android:padding="8dp"
                            android:layout_margin="8dp"
                            android:scrollbars="vertical"
                            android:background="#653E3B3B"/>
                    </LinearLayout>

        </LinearLayout>

</LinearLayout>
