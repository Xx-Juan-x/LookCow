<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vacaslogin"
    tools:context=".Sesion.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_login"
            android:text="LOGIN"
            android:textSize="32dp"
            android:textColor="#292010"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_logo"
            android:layout_marginTop="30dp"
            android:src="@drawable/logotipovacalogin"
            android:maxWidth="180dp"
            android:adjustViewBounds="true"
            android:layout_below="@+id/textView_login"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_loginHead"
            android:text="LookCow"
            android:textStyle="bold"
            android:textColor="#292010"
            android:textAlignment="center"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/imageView_logo"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_login_email"
            android:layout_marginTop="30dp"
            android:text="Email"
            android:textColor="#FDF0DE"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_below="@id/textView_loginHead"
            android:layout_marginStart="45dp"/>

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:id="@+id/imgView_email"
            android:layout_below="@id/textView_login_email"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_email_login"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_login_email"
            android:inputType="textEmailAddress"
            android:hint="Ingrese Email"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray"
            android:backgroundTint="#A1FFFFFF"
            android:padding="11dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:layout_below="@id/textView_login_email"
            android:layout_marginStart="45dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_login_pass"
            android:layout_marginTop="30dp"
            android:text="Contraseña"
            android:textColor="#FDF0DE"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_below="@id/editText_login_email"
            android:layout_marginStart="45dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgView_ver_pass"
            android:layout_below="@id/textView_login_pass"
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_login_pass"
            android:inputType="textPassword"
            android:hint="Ingrese Contraseña"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray"
            android:backgroundTint="#A1FFFFFF"
            android:padding="11dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:layout_below="@id/textView_login_pass"
            android:layout_marginStart="45dp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_login_pass"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:backgroundTint="#F3474720"
            android:textColor="@color/verde_claro"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Loguearse" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_register"
            android:text="Registrarse"
            android:layout_marginTop="15dp"
            android:layout_below="@id/button_login"
            android:layout_marginLeft="70dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:backgroundTint="#F3474720"
            android:textColor="@color/verde_claro"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginRight="70dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_forgot_pass"
            android:text="Recuperar Clave"
            android:layout_marginTop="15dp"
            android:layout_below="@id/button_register"
            android:layout_marginLeft="70dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:backgroundTint="#F3474720"
            android:textColor="@color/verde_claro"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginRight="70dp"/>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar_login"
            style="?android:attr/progressBarStyleLarge"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:visibility="gone"/>

    </RelativeLayout>

</ScrollView>